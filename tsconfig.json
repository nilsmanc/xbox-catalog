{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/lib/router.js",
    "src/components/Details.jsx",
    "src/components/Catalog.jsx",
    "src/components/ActiveLink.jsx"
  ]
}
